<body class="ecommerce">

    <div class="main">
        <div class="container">
            <!-- BEGIN SIDEBAR & CONTENT -->
            <div class="row margin-bottom-40">
                <!-- BEGIN CONTENT -->
                <div class="col-md-12 col-sm-12">
                    <h2> Your cart id: @ViewBag.sessionID</h2>
                    <h1>Shopping cart</h1>
                    <h1 style="text-align:center" >@ViewBag.cart_null</h1>
                    <div class="goods-page">
                        <div class="goods-data clearfix">
                            <div class="table-wrapper-responsive">
                                <table summary="Giỏ hàng">
                                    <tr>
                                        <th class="goods-page-image">Hình ảnh</th>
                                        <th class="goods-page-description">Mô tả</th>
                                        <th class="goods-page-quantity">Số lượng</th>
                                        <th class="goods-page-price">Đơn giá</th>
                                        <th class="goods-page-total" colspan="2">Thành tiền</th>
                                    </tr>
                                    @foreach (var item in ViewBag.Cart)
                                    {
                                <tr>
                                    @*Hình Ảnh*@
                                    <td class="goods-page-image">
                                        <a href="javascript:;">
                                            <img src="~/customer/assets/pages/img/products/@item.img" alt="@item.Name" class="img-responsive"
                                                 data-BigImgsrc="~/customer/~/customer/assets/pages/img/products/@item.img" style="height: 50px; width:50px">
                                        </a>
                                    </td>
                                    @*Mô Tả*@
                                    <td class="goods-page-description">
                                        <h3><a href="javascript:;">@item.Name</a></h3>
                                    </td>
                                    @*Số Lượng*@
                                    <td class="goods-page-quantity">
                                        <div class="product-quantity">
                                            @*<input id="product-quantity" type="text" value="1" readonly class="form-control input-sm">*@
                                            @item.Quantity
                                        </div>
                                    </td>
                                    @*Đơn Giá*@
                                    <td class="goods-page-price">
                                        <strong>@(item.Price.ToString("n0"))<span>VND</span></strong>
                                    </td>
                                    @*Thành Tiền*@
                                    <td class="goods-page-total">
                                        <strong>@((item.Price * item.Quantity).ToString("n0"))<span>VND</span></strong>
                                    </td>
                                    <td class="del-goods-col">
                                        @Html.ActionLink("Detele", "RemoveCart", new { id = item.Id })
                                    </td>
                                </tr>
                                    }

                                </table>
                            </div>

                            <div class="shopping-total">
                                <ul>
                                    <li>
                                        <em>Tổng tiền hàng</em>
                                        <strong class="price">@(ViewBag.Total.ToString("n0"))<span>VND</span></strong>
                                    </li>
                                    <li>
                                        <em>Phí vận chuyển</em>
                                        <strong class="price">@(ViewBag.feeship.ToString("n0"))<span>VND</span></strong>
                                    </li>
                                    <li class="shopping-total-price">
                                        <em>Tổng thanh toán</em>
                                        <strong class="price">@((ViewBag.Total + @ViewBag.feeship).ToString("n0"))<span>VND</span></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <a class="btn btn-default" href="~/customer/index">Tiếp tục mua hàng <i class="fa fa-shopping-cart"></i></a>
                        <button class="btn btn-primary" type="submit">Checkout <i class="fa fa-check"></i></button>
                    </div>
                </div>
                <!-- END CONTENT -->
            </div>
            <!-- END SIDEBAR & CONTENT -->
